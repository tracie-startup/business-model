<%= form_for(@hypothesis, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @hypothesis.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@hypothesis.errors.count, "error") %> prohibited this hypothesis from being saved:</h4>

      <ul>
      <% @hypothesis.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :short_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :short_name, :class => "form-control", :autofocus => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.select :state, Hypothesis::STATE, {}, {:include_blank => false, :class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :business_model_part, :class => "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.select :business_model_part, Hypothesis::MODEL_PARTS, {}, {:include_blank => false, :class => "form-control"} %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label :hypotheses, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :hypotheses, :class => "form-control", :rows => 4 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :experiment, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :experiment, :class => "form-control", :rows => 4 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pass_fail_criterion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :pass_fail_criterion, :class => "form-control", :rows => 4 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
